<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <% if current_user %>
    <div class="current_user">
      <p>Signed in as <%= current_user.first_name %> <%= current_user.last_name %>  |</p>
    </div>
    <div role="navigation">
      <ul class="nav nav-pills nav-stacked">
        <li class="presentation"> <%= link_to "Home", posts_path %></li>
        <li class="presentation"> <%= link_to "Add a New Post", new_post_url %></li>
        <li class="presentation"> <%= link_to "Delete Post", @post, method: :delete, data: {confirm: "Do you want to destory this post for ever and ever?"} %></li>
      </ul>
    </div>
    <div class="sign-out">
      <%= link_to "Log Out", session_url("current"), :method => :delete %>
    </div>
    <% else %>
    <div class="login">
      <%= link_to "Log In", new_session_path %>  | <%= link_to "Sign Up", new_user_path %>
    </div>
    <% end %>


<% flash.each do |name, message| %>
  <%= content_tag :div, message, class: name %>
<% end %>

<div class="jumbotron">
  <h1>welcome to the codemoji</h1>
</div>

<%= yield %>



</body>
</html>
