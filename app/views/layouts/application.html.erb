<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <div>

    <% if current_user%>
    <p>Logged in as <%= current_user.first_name %></p>
        </div>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li> <%= link_to "Home", posts_path %></li>
            <li> <%= link_to "Add a New Post", new_post_url %></li>
            <li> <%= link_to "Delete Post", @post, method: :delete, data: {confirm: "Do you want to destory this post for ever and ever?"} %></li>
            <li><%= link_to "Log Out", destroy_user_session_path("current"), :method => :delete %> </li>
          </ul>
        </div>

        <% else %>
          <p><%= link_to "Log In", new_user_session_path %>  | <%= link_to "Sign Up", new_user_registration_path %> <%= link_to "Log Out",  destroy_user_session_path("current"), :method => :delete %></p>
        <% end %>
      </div>
    </nav>
  </div>
</div>




<div class="jumbotron">
  <h1>welcome to the <span class="codemoji">codemoji</span?</h1>
</div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>



</body>
</html>
